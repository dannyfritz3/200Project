public class LocationDescription {
  
  /**
   * Creates a new book description with the specified name and title.
   * 
   * @param name the name of the book
   * @param title the title of the book
   * @param publisher the publisher of the book
   * @param date the date the book was published
   * @param population the population of the book
   * @param page the amount of pages in the book
   * @param description the desciption of the book
   */
  
  private String name;
  private boolean visited;
  private boolean hostile;
  private int population;
  private String description;
  private String race;
  
  public LocationDescription(String name, boolean visited, boolean hostile, int population, String desctiption, String race) {
    
    this.name = name;
    this.visited = visited;
    this.hostile = hostile;
    this.population = population;
    this.description = description;
    this.race = race;
    // Fill it in.
  }

  /**
   * A method that gets the name of the book
   * 
   * @returns name the name of the book
   */
  public String getName()
  {
    return this.name;
  }
  
  /**
   * A method that gets the title of the book
   * 
   * @returns title the title of the book
   */
  public boolean isVisited()
  {
    return this.visited;
  }
  
  /**
   * A method that gets the publisher of the book
   * 
   * @returns publisher the publisher of the book
   */
  public boolean isHostile()
  {
    return this.hostile;
  }
  
  /**
   * A method that gets the date that the book was published
   * 
   * @returns date the date the book was published
   */
  public int getPopulation()
  {
    return this.population;
  }
  
  /**
   * A method that gets the amount of pages in the book
   * 
   * @returns pages the amount of pages in the book
   */
  public String getRace()
  {
    return this.race;
  }
  
  /**
   * A method that gets the description of the book
   * 
   * @returns description the description of the book
   */
  public String getDescription()
  {
    return this.description;
  }
  
  /**
   * A method that sets the description of the book
   * 
   * @param description the new description of the book
   */
  public void setDescription(String description)
  {
    this.description = description;
  }
  
  /**
   * A method that sets the population of the book
   * 
   * @param population the new population of the book
   */
  public void setPopulation(char population)
  {
    this.population = population;
  }
  
  public void setRace(String race)
  {
    this.race = race;
  }
  /**
   * A method that prints out the entire description of a book
   * 
   * @returns String the entire description of the book
   */
  public String toString()
  {
    return "Name: " + name + "\nVisited: " + visited + "\nHostile: " + hostile + "\nPopulation: " + population + "\nDescription" + description + "\nRace: " + race;
  }
  // add another constructor with takes in parameters for ALL class fields

  // Put in necessary get() and set() methods
  
}
